#!/bin/sh

# set date variable
msg="$(date)"

#update dotfiles
cp -r ~/bin/ ~/tmp/dotfiles/bin/
cp -r ~/.themes/ ~/tmp/dotfiles/.themes/
rm ~/tmp/dotfiles/bin/ripcord.AppImage
cp ~/.ncmpcpp/config ~/tmp/dotfiles/.ncmpcpp/config
cp -r ~/.config/nvim/ ~/tmp/dotfiles/.config/nvim/
rm -rf ~/tmp/dotfiles/.config/nvim/spell
cp -r ~/tmp/dmenu/ ~/tmp/dotfiles/.config/dmenu/
cp -r ~/tmp/st/ ~/tmp/dotfiles/.config/st/
cp -r ~/.config/polybar/ ~/tmp/dotfiles/.config/polybar/
cp -r ~/.config/dunst/ ~/tmp/dotfiles/.config/dunst/
cp ~/.config/openbox/rc.xml ~/tmp/dotfiles/.config/openbox/
cp ~/.config/picom/picom.conf ~/tmp/dotfiles/.config/picom/picom.conf
cp ~/.config/sxhkd/sxhkdrc ~/tmp/dotfiles/.config/sxhkd/sxhkdrc
cp ~/.bashrc ~/tmp/dotfiles/.bashrc

# push to github
cd ~/tmp/dotfiles/
git add . && git commit -m "${msg}"
git push origin master
