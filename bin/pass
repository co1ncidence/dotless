#!/bin/dash
#
# Dmenu script to copy my passwords to clipboard
# Might be "insecure" as of yet, but a workaround is coming soon
#

pass=$HOME/usr/doc/savefiles/pass

choice=$(echo "zohomail\ngmail\nroot\ncougar\ndiscord\ncollegeboard\nssn\n'               '"| \
  dmenu -fn 'Dina' -nb '#232323' -nf '#d9d9d9' -sb '#f0f0f0' -sf '#232323')

case "$choice" in
	collegeboard) xclip -selection clipboard "$pass/collegeboard.txt";;
  zohomail)  xclip -selection clipboard "$pass/zohomail.txt";;
	discord)  xclip -selection clipboard "$pass/discord.txt" ;;
	cougar)  xclip -selection clipboard "$pass/cougar.txt" ;;
  gmail)  xclip -selection clipboard "$pass/gmail.txt" ;;
  root)  xclip -selection clipboard "$pass/root.txt" ;;
  ssn)  xclip -selection clipboard "$HOME/usr/doc/school/doc/txt/ssn.md" ;;
  space) cat $HOME/usr/bin/pass | xclip -selection clipboard & ;;
esac
