#!/bin/dash
#
# Dmenu script to copy my passwords to clipboard
# Might be "insecure" as of yet, but a workaround is coming soon
#

pass=$HOME/usr/doc/savefiles/pass

choice=$(echo "zohomail\ngmail\nroot\ncougar\ndiscord\ncollegeboard\nssn\n'               '"| \
  dmenu -fn 'Roboto Mono Medium' -nb '#232323' -nf '#d9d9d9' -sb '#f0f0f0' -sf '#232323')

case "$choice" in
	collegeboard) xclip -sel clip "$pass/collegeboard.txt"							;;
  zohomail)			xclip -sel clip "$pass/zohomail.txt"									;;
	discord)			xclip -sel clip "$pass/discord.txt"										;;
	cougar)				xclip -sel clip "$pass/cougar.txt"										;;
  gmail)				xclip -sel clip "$pass/gmail.txt"											;;
  root)					xclip -sel clip "$pass/root.txt"											;;
  ssn)					xclip -sel clip "$HOME/usr/doc/school/doc/txt/ssn.md" ;;
esac
