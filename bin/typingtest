#!/bin/sh
# start a typing test
# choose a font

choice="$(echo "recursive\nroboto\nsudo\napercu\njetbrains\nwriter\nspace\nsanfran\n'               '"| \
  dmenu -fn "envypn" -nb "#2E2927" -nf "#ede3e1" -sb "#ede3e1" -sf "#2E2927")"

[ -z "$choice" ] && \
  exit 1 || \
  case "$choice" in
    recursive)    st -f "envypn":pixelsize=28 -e gottagofast -w 67 &  ;;
    roboto)       st -f "Roboto Mono":pixelsize=28 -e gottagofast -w 67 &                   ;;
    sudo)         st -f "Sudo":pixelsize=28 -e gottagofast -w 67 &                          ;;
    apercu)       st -f "Apercu Pro Mono":pixelsize=28 -e gottagofast -w 67 &               ;;
    jetbrains)    st -f "JetBrains Mono":pixelsize=28 -e gottagofast -w 67 &                ;;
    writer)       st -f "iA Writer Mono V":pixelsize=28 -e gottagofast -w 67 &              ;;
    space)        st -f "Space Mono":pixelsize=28 -e gottagofast -w 67 &                    ;;
    sanfran)      st -f "SF Mono":pixelsize=28 -e gottagofast -w 67 &                       ;;
  esac
