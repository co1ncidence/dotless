#!/bin/sh -e
#mount disk
#based off of gk's

set -- $(lsblk -ro name,mountpoint,model,fstype \
				| grep -i '  [a-rt-z]' \
				| dmenu -fn 'Iosevka Term Slab' -nb '#393939' \
																				-nf '#ffffff' \
																				-sb '#ffffff' \
																				-sf '#393939')
[ "$1" ]
mkdir -p "$HOME/mnt/$1"
sls -u root mount "/dev/$1" "$HOME/mnt/$1"
herbe "mounted $1"
