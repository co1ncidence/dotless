#!/bin/sh
#
# Preview a Hex Code
# Copied from:
# https://github.com/6gk
#

hex=$(xclip -o | tr -d '#;; ')

v='[a-fA-F0-9]'
case $hex in
  $v$v$v$v$v$v) ;;
  *) hex="$(colorpicker -doq)"
esac

hex=$(printf %s "$hex" | tr '[:upper:]' '[lower]' | tr -d '#\n')

printf %s "$hex" | xclip -sel clip
xclip -i /dev/null

herbe "$hex"
