#!/bin/sh
# stupid script that updates my dotfiles

cp -r ~/etc/ ~/usr/git/dotless/
rm -rf ~/usr/git/dotless/etc/nvim/plugged/
rm -rf ~/usr/git/dotless/etc/nvim/colors/
rm -rf ~/usr/git/dotless/etc/nvim/spell/
rm -rf ~/usr/git/dotless/etc/nvim/.netrwhist
cp -r ~/usr/bin/ ~/usr/git/dotless/
cp -r ~/var/themes/graywindow/ ~/usr/git/dotless/var/themes/
cd ~/usr/git/dotless/
rm -rf \
	etc/ranger/colorschemes/  \
	etc/user-dirs.locale \
	etc/user-dirs.dirs   \
	etc/pavucontrol.ini  \
	etc/QtProject.conf   \
	etc/zsh/.zshrc.zni   \
	etc/zsh/.zcompdump   \
	etc/mimeapps.list    \
	etc/zsh/.histfile    \
	etc/youtube-dlg/  \
	etc/libreoffice/  \
	etc/MusicBrainz/  \
	etc/configstore/  \
	etc/keepassxc/    \
	bin/templates/    \
	etc/skanliterc    \
	etc/qalculate/    \
	etc/inkscape/     \
	etc/chromium/     \
	etc/.lesshst  \
	etc/gtk-2.0/  \
	etc/.gtkrc-2.0  \
	etc/gtk-3.0/  \
	etc/manjaro/  \
	etc/Thunar/   \
	etc/pulse/    \
	etc/dconf/    \
	etc/gnupg/    \
	etc/xfce4/    \
	etc/enchant/  \
	etc/gedit/    \
	etc/qt5ct/    \
	etc/procps    \
	etc/gconf     \
	etc/GIMP/     \
	etc/yay/      \
  etc/git/
rm -rf ~/usr/git/dotless/bin/templates/
rm -rf ~/usr/git/dotless/bin/classes/
rm -rf ~/usr/git/dotless/bin/notmine/

[ -z "$1" ] && \
    msg="docs:update" || \
    msg="$1"

git add .
git commit -m "${msg}"
git push origin master
