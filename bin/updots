#!/bin/sh
#
# Stupid Script that updates my dotfiles
#

msg="$(date)"

cp -r ~/etc/ ~/git/dotless/
rm -rf ~/git/dotless/etc/nvim/plugged/
rm -rf ~/git/dotless/etc/nvim/spell/
cp -r ~/usr/bin/ ~/git/dotless/
cp -r ~/var/themes/graywindow/ ~/git/dotless/var/themes/
rm -rf ~/git/dotless/etc/gnupg/
rm -rf ~/git/dotless/etc/pulse/
rm -rf ~/git/dotless/etc/git/
rm -rf ~/git/dotless/etc/chromium/
rm -rf ~/git/dotless/etc/libreoffice/
rm -rf ~/git/dotless/etc/GIMP/
rm -rf ~/git/dotless/etc/manjaro/
rm -rf ~/git/dotless/etc/configstore/
rm -rf ~/git/dotless/etc/dconf/
rm -rf ~/git/dotless/etc/keepassxc/
rm -rf ~/git/dotless/etc/xfce4/
rm -rf ~/git/dotless/etc/pavucontrol.ini
rm -rf ~/git/dotless/etc/gedit/
rm -rf ~/git/dotless/etc/Thunar/
rm -rf ~/git/dotless/etc/youtube-dlg/
rm -rf ~/git/dotless/etc/.lesshst
rm -rf ~/git/dotless/etc/QtProject.conf
rm -rf ~/git/dotless/etc/mimeapps.list
rm -rf ~/git/dotless/etc/zsh/.histfile
rm -rf ~/git/dotless/etc/zsh/.zcompdump
rm -rf ~/git/dotless/etc/zsh/.zshrc.zni
rm -rf ~/git/dotless/etc/qalculate/
rm -rf ~/git/dotless/etc/gtk-2.0/
rm -rf ~/git/dotless/etc/gtk-3.0/
rm -rf ~/git/dotless/etc/qt5ct/
rm -rf ~/git/dotless/etc/ranger/colorschemes/
rm -rf ~/git/dotless/etc/gconf
rm -rf ~/git/dotless/etc/procps
rm -rf ~/git/dotless/etc/user-dirs.locale
rm -rf ~/git/dotless/etc/user-dirs.dirs
rm -rf ~/git/dotless/etc/MusicBrainz/
rm -rf ~/git/dotless/etc/skanliterc

cd ~/git/dotless/

[ -z "$1" ] && \
    msg="$(date +%H:%M:%S)" || \
    msg="$1"

git add .
git commit -m "${msg}"
git push origin master
