#!/bin/sh

# set the date variable for the commit msg
msg="$(date)"

#update dotfiles
cp ~/.bashrc ~/git/dotfiles/
cp -r ~/etc/ ~/git/dotfiles/
rm -rf ~/git/dotfiles/etc/nvim/plugged/
cp -r ~/usr/bin/ ~/git/dotfiles/
cp -r ~/var/themes/shit/ ~/git/dotfiles/thm/themes/
cp -r ~/var/themes/blackwindow/ ~/git/dotfiles/thm/themes/
cp -r ~/var/themes/whitewindow/ ~/git/dotfiles/thm/themes/
cp -r ~/.local/share/icons/blackbeach.tar.bz2 ~/git/dotfiles/thm/icons/
rm -rf ~/git/dotfiles/etc/gnupg/
rm -rf ~/git/dotfiles/etc/pulse/
rm -rf ~/git/dotfiles/etc/git/
rm -rf ~/git/dotfiles/etc/chromium/
rm -rf ~/git/dotfiles/etc/libreoffice/
rm -rf ~/git/dotfiles/etc/GIMP/
rm -rf ~/git/dotfiles/etc/manjaro/

# push to github
cd ~/git/dotfiles/
git add . && git commit -m "${msg}"
git push origin master
