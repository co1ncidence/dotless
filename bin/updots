#!/bin/sh
#stupid script that updates my dotfiles

cp -r	"$HOME/etc/" "$HOME/usr/git/dotless/"
rm -rf	"$HOME/usr/git/dotless/etc/nvim/plugged/"
rm -rf	"$HOME/usr/git/dotless/etc/nvim/colors/"
rm -rf	"$HOME/usr/git/dotless/etc/nvim/spell/"
rm -rf	"$HOME/usr/git/dotless/etc/nvim/.netrwhist"
cp -r	"$HOME/usr/bin/" "$HOME/usr/git/dotless/"
cp -r	$HOME/var/themes/* "$HOME/usr/git/dotless/var/themes/"
cd		"$HOME/usr/git/dotless/"
rm -rf \
	etc/ranger/colorschemes/  \
	etc/user-dirs.locale \
	etc/user-dirs.dirs   \
	etc/pavucontrol.ini  \
	etc/QtProject.conf   \
	etc/zsh/.zshrc.zni   \
	etc/zsh/.zcompdump   \
	etc/mimeapps.list    \
	etc/zsh/.histfile    \
	etc/youtube-dlg/  \
	etc/libreoffice/  \
	etc/.mozilla/			\
	etc/MusicBrainz/  \
	etc/configstore/  \
	etc/keepassxc/    \
	etc/GeoGebra/     \
	bin/templates/    \
	bin/stain/				\
	etc/skanliterc    \
	etc/qalculate/    \
	etc/htop/				  \
	etc/calcurse/     \
	etc/herbe/Makefile     \
	etc/herbe/config.def.h	\
	etc/herbe/herbe		\
	etc/herbe/herbe.c \
	etc/inkscape/     \
	etc/chromium/     \
	etc/.lesshst  \
	etc/gtk-2.0/  \
	etc/.gtkrc-2.0  \
	etc/gtk-3.0/  \
	etc/manjaro/  \
	etc/Thunar/   \
	etc/pulse/    \
	etc/libfm/    \
	etc/dconf/    \
	etc/gnupg/    \
	etc/xfce4/    \
	etc/enchant/  \
	etc/gedit/    \
	etc/qt5ct/    \
	etc/procps    \
	etc/gconf     \
	etc/GIMP/     \
	etc/ncmpcpp/error.log \
	etc/mpd/mpd.db \
	etc/mpd/mpd.log \
	etc/mpd/mpd.pid \
	etc/mpd/mpdstate \
	etc/mpd/playlists \
	etc/yay/      \
  etc/git/
rm -rf "$HOME/usr/git/dotless/bin/templates/"
rm -rf "$HOME/usr/git/dotless/bin/classes/"
rm -rf "$HOME/usr/git/dotless/bin/notmine/"

[ -z "$1" ] && \
    msg="docs:update" || \
    msg="$1"

git add .
git commit -m "${msg}"
git push origin master
