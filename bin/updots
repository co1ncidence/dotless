#!/bin/sh

# set the date variable for the commit msg
msg="$(date)"

#update dotfiles
cp -r ~/etc/ ~/git/dotfiles/
rm -rf ~/git/dotfiles/etc/nvim/plugged/
cp -r ~/usr/bin/ ~/git/dotfiles/
cp -r ~/var/themes/shit/ ~/git/dotfiles/var/themes/
cp -r ~/var/themes/blackwindow/ ~/git/dotfiles/var/themes/
cp -r ~/var/themes/whitewindow/ ~/git/dotfiles/var/themes/
cp -r ~/var/themes/graywindow/ ~/git/dotfiles/var/themes/
rm -rf ~/git/dotfiles/etc/gnupg/
rm -rf ~/git/dotfiles/etc/pulse/
rm -rf ~/git/dotfiles/etc/git/
rm -rf ~/git/dotfiles/etc/chromium/
rm -rf ~/git/dotfiles/etc/libreoffice/
rm -rf ~/git/dotfiles/etc/GIMP/
rm -rf ~/git/dotfiles/etc/manjaro/
rm -rf ~/git/dotfiles/etc/configstore/
rm -rf ~/git/dotfiles/etc/dconf/
rm -rf ~/git/dotfiles/etc/keepassxc/
rm -rf ~/git/dotfiles/etc/xfce4/
rm -rf ~/git/dotfiles/etc/pavucontrol.ini
rm -rf ~/git/dotfiles/etc/gedit/
rm -rf ~/git/dotfiles/etc/Thunar/
rm -rf ~/git/dotfiles/etc/youtube-dlg/
rm -rf ~/git/dotfiles/etc/.lesshst
rm -rf ~/git/dotfiles/etc/QtProject.conf
rm -rf ~/git/dotfiles/etc/mimeapps.list

# push to github
cd ~/git/dotfiles/
git add . && git commit -m "${msg}"
git push origin master
