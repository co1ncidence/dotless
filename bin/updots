#!/bin/sh

# set the date variable for the commit msg
msg="$(date)"

#update dotfiles
cp -r ~/bin/ ~/git/dotfiles/
cp -r ~/.themes/ ~/git/dotfiles/
rm ~/git/dotfiles/bin/ripcord.AppImage
cp ~/.ncmpcpp/config ~/git/dotfiles/.ncmpcpp/config
cp -r ~/.config/nvim/ ~/git/dotfiles/.config/
rm -rf ~/git/dotfiles/.config/nvim/spell
cp -r ~/git/dmenu/ ~/git/dotfiles/.config/
cp -r ~/git/st/ ~/git/dotfiles/.config/
cp -r ~/.config/polybar/ ~/git/dotfiles/.config/
cp -r ~/.config/dunst/ ~/git/dotfiles/.config/
cp ~/.config/openbox/rc.xml ~/git/dotfiles/.config/openbox/
cp ~/.config/picom/picom.conf ~/git/dotfiles/.config/picom/picom.conf
cp ~/.config/sxhkd/sxhkdrc ~/git/dotfiles/.config/sxhkd/sxhkdrc
cp ~/.bashrc ~/git/dotfiles/

# push to github
cd ~/git/dotfiles/
git add . && git commit -m "${msg}"
git push origin master
