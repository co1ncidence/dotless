#!/bin/bash
#
# dmenu script to manage my school workflow
#

choice=$(echo -e "schooldocs\ncomp2\nhumanities\n'               '"| \
  dmenu -fn 'Roboto Mono Medium' -nb '#050505' -nf '#d9d9d9' -sb '#f0f0f0' -sf '#050505')

case "$choice" in
  schooldocs) . ~/usr/bin/classes/schooldocs & disown ;;
  comp2) . ~/usr/bin/classes/comp2 & disown ;;
  humanities) . ~/usr/bin/classes/humanities & disown ;;
  space) echo ' ' & ;;
esac
