#!/bin/sh
# dmenu script to manage my school workflow

choice="$(echo "schooldocs\ncomp2\nhumanities\n'               '"| \
  dmenu -fn "Recursive Mono Linear Static" -nb "#211d1c" -nf "#ede3e1" -sb "#ede3e1" -sf "#211d1c")"

[ -z "$choice" ] && \
  exit 1 || \
  case "$choice" in
    schooldocs)  . "$HOME/usr/bin/classes/schooldocs" &       ;;
    comp2)       . "$HOME/usr/bin/classes/comp2" &            ;;
    humanities)  . "$HOME/usr/bin/classes/humanities" &     ;;
  esac
