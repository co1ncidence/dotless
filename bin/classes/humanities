#!/bin/bash
#
# humanities script
#

choice=$(echo -e "todo\nassignments\n'               '"| \
  dmenu -fn 'Dina' -nb '#050505' -nf '#d9d9d9' -sb '#f0f0f0' -sf '#050505')

case "$choice" in
  todo) st -e nvim ~/usr/doc/school/huma-1301/todo.md & disown ;;
  assignments) st -e ranger ~/usr/doc/school/huma-1301 & disown ;;
  space) echo ' ' & ;;
esac
