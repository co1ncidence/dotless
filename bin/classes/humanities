#!/bin/bash
#
# humanities script
#

choice=$(echo -e "todo\nassignments\n'               '"| \
  dmenu -fn 'Dina' -nb '#232323' -nf '#d9d9d9' -sb '#f0f0f0' -sf '#232323')

case "$choice" in
  todo) st -e nvim ~/usr/doc/school/huma-1301/todo.md & disown ;;
  assignments) cd ~/usr/doc/school/huma-1301 ; st & disown ;;
  space) echo ' ' & ;;
esac
