#!/bin/bash
#
# schooldocs script
#

choice=$(echo -e "pdf\npng\nppt\ntxt\n'               '"| \
  dmenu -fn 'Roboto Mono Medium' -nb '#050505' -nf '#d9d9d9' -sb '#f0f0f0' -sf '#050505')

case "$choice" in
  pdf) st -e ranger ~/usr/doc/school/doc/pdf/ & disown ;;
  png) st -e ranger ~/usr/doc/school/doc/png/ & disown ;;
  ppt) st -e ranger ~/usr/doc/school/doc/ppt/ & disown ;;
  txt) st -e ranger ~/usr/doc/school/doc/txt/ & disown ;;
  space) echo ' ' & ;;
esac
