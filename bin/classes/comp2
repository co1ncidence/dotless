#!/bin/bash
#
# comp2 script
#

choice=$(echo -e "todo\nessays\n'               '"| \
  dmenu -fn 'Roboto Mono Medium' -nb '#050505' -nf '#d9d9d9' -sb '#f0f0f0' -sf '#050505')

case "$choice" in
  todo) st -e nvim ~/usr/doc/school/engl-1302/todo.md & disown ;;
  essays) st -e ranger ~/usr/doc/school/engl-1302/essays & disown ;;
  space) echo ' ' & ;;
esac
