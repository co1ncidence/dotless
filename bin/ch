#! /bin/sh
# clean ~~your~~ my home dir!

[ "$(pgrep -x ch)" = "$$" ] || exit 1

while :; do
	set --
	for i in "$HOME/.pki" \
           "$HOME/.local" \
           "$HOME/.cache" \
           "$HOME/.config" \
           "$HOME/.xournapp" \
           "$HOME/.lyrics" \
           "$HOME/.pki" \
           "$HOME/.bash*" \
           "$HOME/.local"; do
		[ -e "$i" ] && set -- "$@" "$i"
	done
	[ "$1" ] && rm -rf -- "$@"
	sleep 60
done
