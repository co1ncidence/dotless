#!/bin/sh
#homedir roomba

[ "$(pgrep -x ch)" = "$$" ] || exit 1

while :; do
	set --
	for i in "$HOME/.pki"	 	 \
           "$HOME/.w3m"	   \
           "$HOME/.local"  \
           "$HOME/.cache"  \
					 "$HOME/.bash*"  \
					 "$HOME/.local"  \
           "$HOME/.config" \
					 "$HOME/.lyrics" \
           "$HOME/.xournalpp"; do
		[ -e "$i" ] && set -- "$@" "$i"
	done
	[ "$1" ] && rm -rf -- "$@"
	sleep 60
done
