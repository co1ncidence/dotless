#!/bin/sh
#
# take a screenshot with some padding
# also saves to clipboard

PADDING=25
DIR=$HOME/usr/pic/scrots/

mkdir -p "$DIR"

id=$(slw) &&
    wattr xywhb "$id" | {
        read -r x y w h b

        # get dimensions & coordinates
        w=$((w + PADDING * 2))
        h=$((h + PADDING * 2))
        x=$((x - PADDING + b))
        y=$((y - PADDING + b))

        cur=$(date +%F_%H-%M-%S)

        maim -m 10 -g "${w}x${h}+$x+$y" | xclip -selection clipboard -t image/png &&
            notify-send "Screenshot Taken"
    }
