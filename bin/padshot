#!/bin/dash
#
# Take a screenshot with some padding
# Also saves to clipboard
#

PADDING=30

id=$(slw) &&
    wattr xywhb "$id" | {
        read -r x y w h b

        w=$((w + PADDING * 2))
        h=$((h + PADDING * 2))
        x=$((x - PADDING + b))
        y=$((y - PADDING + b))

        cur=$(date +%F_%H-%M-%S)

        maim -m 10 -u -g "${w}x${h}+$x+$y" | xclip -selection clipboard -t image/png &&
            herbe "Screenshot Taken"
    }
