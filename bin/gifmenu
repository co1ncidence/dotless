#!/bin/sh
#dmenu script to copy weird gifs to clipboard

dir="$HOME/med/pic/mem/gif/"

gif="$(ls -1 "$dir" | dmenu -fn "Iosevka Term Slab" \
                                      -nb "#515151" \
                                      -nf "#ffffff" \
                                      -sb "#515151" \
                                      -sf "#66948b")"

[ -f "$dir/$gif" ] && xclip -sel clip -in "$dir/$gif"
