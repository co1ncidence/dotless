#!/bin/sh
#dmenu logout script

#emtpy line is for dmenu width
choice="$(echo "logout\nrestart\nshutdown\nsuspend\n'               '"| \
  #change colors if you like
  dmenu -fn "Input Mono Condensed" -nb "#393939" -nf "#f2777a" -sb "#ffffff" -sf "#f2777a")"

[ -z "$choice" ] && \
  exit 1 || \
  case "$choice" in
    logout)     openbox --exit      ;;
    restart)    systemctl reboot    ;;
    shutdown)   systemctl poweroff  ;;
    suspend)    systemctl suspend   ;;
  esac
