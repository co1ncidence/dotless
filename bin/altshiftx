#!/bin/sh
#dmenu logout script

#emtpy line is for dmenu width
choice="$(echo "logout\nrestart\nshutdown\nsuspend\n'               '"| \
  #change colors if you like
  dmenu -fn "Space Mono" -nb "#2E2927" -nf "#f7f6f6" -sb "#f7f6f6" -sf "#2E2927")"

[ -z "$choice" ] && \
  exit 1 || \
  case "$choice" in
    logout)     openbox --exit      ;;
    restart)    systemctl reboot    ;;
    shutdown)   systemctl poweroff  ;;
    suspend)    systemctl suspend   ;;
  esac
