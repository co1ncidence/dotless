#!/bin/sh
# dmenu logout script

choice="$(echo "logout\nrestart\nshutdown\nsuspend\n'               '"| \
  dmenu -fn "Recursive Mono Linear Static" -nb "#211d1c" -nf "#EDE3E1" -sb "#EDE3E1" -sf "#211d1c")"

[ -z "$choice" ] && \
  exit 1 || \
  case "$choice" in
    logout)     openbox --exit      ;;
    restart)    systemctl reboot    ;;
    shutdown)   systemctl poweroff  ;;
    suspend)    systemctl suspend   ;;
  esac
