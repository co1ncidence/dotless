#!/bin/bash
#center the current window

#get window position information
IFS='x' read screenWidth screenHeight < <(xdpyinfo \
  | grep dimensions \
  | grep -o '[0-9x]*' \
  | head -n1)

#set new width
width=$(xdotool getactivewindow getwindowgeometry --shell \
  | head -4 \
  | tail -1 \
  | sed 's/[^0-9]*//')

#set new height
height=$(xdotool getactivewindow getwindowgeometry --shell \
  | head -5 \
  | tail -1 \
  | sed 's/[^0-9]*//')

#define "center of screen"
newPosX=$((screenWidth/2-width/2))
newPosY=$((screenHeight/2-height/2))

#move to center
xdotool getactivewindow windowmove "$newPosX" "$newPosY"
