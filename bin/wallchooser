#!/bin/sh
#wallpaper chooser

dir="$HOME/med/wlp"

wall="$(ls -1 "$dir" | dmenu -fn "Iosevka Term Slab" \
                                       -nb "#515151" \
                                       -nf "#ffffff" \
                                       -sb "#515151" \
                                       -sf "#66948b")"

[ -f "$dir/$wall" ] && \
  hsetroot -cover "$dir/$wall"
