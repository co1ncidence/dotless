#!/bin/sh
#dmenu script to copy my passwords to clipboard

dir="$HOME/usr/doc/sav/pass"

pass="$(ls -1 "$dir" | dmenu -fn "Iosevka Term Slab" \
                                       -nb "#363636" \
                                       -nf "#515151" \
                                       -sb "#363636" \
                                       -sf "#ffffff")"

[ -f "$dir/$pass" ] && xclip -sel clip -in "$dir/$pass"
