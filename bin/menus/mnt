#!/bin/sh -e
#mount disk

set -- $(lsblk -ro name,mountpoint,model,fstype \
  | grep -i '  [a-rt-z]' \
  | dmenu -fn 'Iosevka Term Slab' -nb '#3e393b' \
                                  -nf '#7b7274' \
                                  -sb '#3e393b' \
                                  -sf '#e4e1e2')
[ "$1" ]
mkdir -p "$HOME/mnt/$1"
sls -u root mount "/dev/$1" "$HOME/mnt/$1"
herbe "mounted $1"
