#!/bin/sh -e
#plumber for FFF and SHFM

case "$1" in

        *.mp3|*.flac|*.wav)

          setsid -f vibeto "$1"
          ;;

        *.mp4|*.mkv|*.webm|*.mov|*.gif)

          setsid -f mpv "$1"
          ;;

        *.png|*.jpg|*.jpe|*.jpeg)

          setsid -f sxiv "$1"
          ;;

        *.pdf|*.PDF)

          setsid -f zathura "$1"
          ;;

        *.odt|*.ppt|*.csv)

          setsid -f libreoffice "$1"
          ;;

        *)
          "${EDITOR:=nvim}" "$1"
          ;;

esac
