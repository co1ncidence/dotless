#! /bin/sh -e
# plumber for FFF and SHFM

case "$1" in
        *.mp3|*.flac|*.wav)
           setsid -f mpv --no-video "$1"
        ;;

        *.mp4|*.mkv|*.webm|*.mov)
           setsid -f mpv "$1"
        ;;

        *.png|*.gif|*.jpg|*.jpe|*.jpeg)
           setsid -f sxiv "$1"
        ;;

        *.pdf)
           setsid -f zathura "$1"
        ;;

        *.odt|*.ppt|*.csv)
           setsid -f libreoffice "$1"
        ;;

        # all other files
        *)
            "${EDITOR:=nvim}" "$1"
        ;;

    esac
